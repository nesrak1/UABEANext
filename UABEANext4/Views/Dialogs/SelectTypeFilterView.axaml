<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dlg="using:UABEANext4.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="UABEANext4.Views.Dialogs.SelectTypeFilterView"
             x:DataType="dlg:SelectTypeFilterViewModel"
             Background="{DynamicResource DockThemeBackgroundBrush}">

    <Grid Margin="12" RowDefinitions="*, Auto">

        <Border Grid.Row="0"
                BorderBrush="{DynamicResource DockThemeBorderLowBrush}"
                BorderThickness="1">
            <ListBox ItemsSource="{Binding FilterTypes}"
                     Background="{DynamicResource DockThemeListBackgroundBrush}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsSelected}"
                                  Padding="8,0,0,0"
                                  VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" />
                        </CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto" Margin="0,12,0,0">

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                <Button Command="{Binding SelectAll}"
                        Content="Select all"
                        Padding="8,4"
                        FontSize="12"/>
                <Button Command="{Binding DeselectAll}"
                        Content="Deselect all"
                        Padding="8,4"
                        FontSize="12"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <Button Command="{Binding Accept}"
                        Content="OK"
                        Width="85"
                        Height="28"
                        IsDefault="True" />
                <Button Command="{Binding Cancel}"
                        Content="Cancel"
                        Width="85"
                        Height="28"
                        IsCancel="True" />
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>