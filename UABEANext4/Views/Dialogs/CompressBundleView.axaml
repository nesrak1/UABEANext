<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dlg="using:UABEANext4.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="580" d:DesignHeight="160"
             x:Class="UABEANext4.Views.Dialogs.CompressBundleView"
             x:DataType="dlg:CompressBundleViewModel"
             Background="{DynamicResource DockThemeBackgroundBrush}">

    <Grid Margin="14" RowDefinitions="*,Auto" RowSpacing="12">
        <Grid Grid.Row="0"
              RowDefinitions="Auto,Auto"
              ColumnDefinitions="170,*"
              RowSpacing="8"
              ColumnSpacing="10">
            <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Compression Method" />
            <ComboBox Grid.Row="0" Grid.Column="1"
                      SelectedItem="{Binding SelectedCompressionChoice}"
                      ItemsSource="{Binding CompressionChoices}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="dlg:CompressionChoice">
                        <StackPanel Spacing="1">
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Description}" Opacity="0.65" FontSize="11" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Output File" />
            <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <TextBox Grid.Column="0" Name="OutputPathBox" Text="{Binding OutputPath}" />
                <Button Grid.Column="1"
                        MinWidth="90"
                        Height="28"
                        Content="Browse..."
                        Command="{Binding BrowseOutputPath}" />
            </Grid>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">
            <Button Width="90"
                    Height="30"
                    IsDefault="True"
                    Content="OK"
                    Command="{Binding BtnCompress_Click}" />
            <Button Width="90"
                    Height="30"
                    IsCancel="True"
                    Content="Cancel"
                    Command="{Binding BtnCancel_Click}" />
        </StackPanel>
    </Grid>
</UserControl>
